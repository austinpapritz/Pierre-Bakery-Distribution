<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
    crossorigin="anonymous">
  </head>
  <body>
  <header>
    <h1>Orders for @Model.Name</h1>
    <div class="navbar">
      <form action="/" action="get">
        <button class="nav-button" type="submit">Home</button>
      </form>     
      <form action="/vendors/new" action="get">
        <button class="nav-button last-button" type="submit">Add vendor</button>
      </form>
    </div>
  </header>
    

    @foreach (Order order in @Model.VendorOrders){
    <div classname="order-card">
      <div classname="order-content">
        <h3>Deliver on @order.Date</h3>
        <ul>
        @foreach (OrderItem item in order.Items){
          <li>@item.Product.Name (@item.Quantity) $@item.Subtotal</li>
        }
        </ul>
        <h5>Total: $@order.TotalPrice</h5>
        <hr>
      </div>
    </div>
    }

    <form action="/vendors/@Model.Id/orders/new" action="get">
      <button type="submit">Add order</button>
    </form>
  </body>
</html>